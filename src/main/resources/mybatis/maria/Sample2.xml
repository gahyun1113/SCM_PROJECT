<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.jhta_2402_2_final.dao.SampleDao">

    <insert id="insert" parameterType="Sample">
        INSERT INTO sample (id, name)
        VALUES (#{id}, #{name})
    </insert>

    <select id="findById" resultType="Sample" parameterType="Long">
        SELECT id, name
        FROM sample
        WHERE id = #{id}
    </select>

    <select id="findAll" resultType="Sample">
        SELECT * from sample
    </select>

    <select id="getTest" resultType="Map">
        SELECT * from test
    </select>
</mapper>